{
  "name": "fhevm-sdk",
  "version": "1.0.0",
  "description": "Universal SDK for building confidential frontends with FHEVM - framework agnostic and developer friendly",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc --project tsconfig.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --project tsconfig.json --declaration --emitDeclarationOnly --outDir dist",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "privacy",
    "blockchain",
    "ethereum",
    "zama",
    "confidential-computing",
    "web3"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fhevmjs": "^0.5.0",
    "ethers": "^6.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0"
  },
  "peerDependencies": {
    "ethers": "^6.0.0"
  }
}
